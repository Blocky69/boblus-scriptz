    Name = "Change Menu",
    Callback = function()
        local event = game:GetService("ReplicatedStorage"):WaitForChild("Events"):WaitForChild("BindableEvents"):WaitForChild("MenuSelect")
        event:Fire(selectedMenu)
    end,
})

