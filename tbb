T:AddToggle({
	Name = "Auto Set Info",
	Default = false,
	Callback = function(Value)
	    repeat
		    TotalExperience:Set(game:GetService("Players").LocalPlayer.PlayerData.Currency.Experience.Value)
		    TotalBricks:Set(game:GetService("Players").LocalPlayer.PlayerData.Currency.Bricks.Value)
		until Value == false
	end    
})

